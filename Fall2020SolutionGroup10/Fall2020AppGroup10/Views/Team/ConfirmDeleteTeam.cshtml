@model Team

@{
    ViewData["Title"] = "ConfirmDeleteTeam";
}

<h1>ConfirmDeleteTeam</h1>

<form asp-action="DeleteTeam" asp-controller="Team" method="post">

    @Html.HiddenFor(m => m.TeamID)

    <div class="form-group">
        <label>Team Name</label>
        <input asp-for="Name" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label>Team City</label>
        <input asp-for="City" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label>Division</label>
        <input asp-for="Division" class="form-control" readonly />

    </div>

    <div class="form-group">
        <label>Wins</label>
        <input asp-for="Wins" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Losses</label>
        <input asp-for="Losses" class="form-control" readonly />
    </div>
    <button type="submit" class="btn btn-primary">Confirm Delete Team</button>



</form>
