@model IEnumerable<Game>

<h4> Search Result</h4>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th> Date</th>
            <th> Favorite</th>
            <th> Score</th>
            <th> Home Team</th>
            <th> Away Team</th>
        </tr>

    </thead>

    <tbody>

        @foreach (Game eachGame in Model)
        {
            <tr>
                <td>@eachGame.Date</td>

                @if (eachGame.Favorite.HasValue)
                {
                    <td>@eachGame.Favorite</td>
                }

                @if (eachGame.Score.HasValue)
                {
                    <td>@eachGame.Score</td>
                }

                <td>@eachGame.HomeID</td>

                <td>@eachGame.AwayID</td>



            </tr>

        }

    </tbody>


</table>
