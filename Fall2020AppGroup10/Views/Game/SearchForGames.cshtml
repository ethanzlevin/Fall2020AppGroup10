@model SearchForGamesViewModel
@{
    ViewData["Tile"] = "SearchForGamesUserInput";
}

<h3> SearchForGameUserInput</h3>
<h6> All selections are optional</h6>

<form asp-controller="Game" asp-action="SearchForGames" method="post">

    <div class="form-group">
        <label> Choose a Home Team</label>
        <select asp-for="HomeID" asp-items="ViewBag.AllGames" class="form-control">
            <option value="">None</option>
        </select>

    </div>

    <div class="form-group">
        <label> Choose a Away Team</label>
        <select asp-for="AwayID" asp-items="ViewBag.AllGames" class="form-control">
            <option value="">None</option>
        </select>

    </div>

    <div class="form-group">
        <label>Game should be after</label>
        <input asp-for="StartDate" class="form=control" />
    </div>

    <div class="form-group">
        <label>Game should be before</label>
        <input asp-for="EndDate" class="form=control" />
    </div>

    <button type="submit" class="btn btn-primary">Search for Games</button>


</form>



